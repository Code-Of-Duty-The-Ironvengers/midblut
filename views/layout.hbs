<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mind Blur</title>
  </head>
  <body>
    <nav>
      <div>
        <a href="/">
          Welcome to mindblur
        </a>
      </div>
      <ul>
        {{! If there is a user i want to display that you can add books }}
        {{! If there is NO user i want to display Login and Register }}
        {{#if isLoggedIn}}
          <li>
            <a href="/book/add">Add a book</a>
          </li>
        {{else}}
          <li>
            <a href="/auth/register">Create account</a>
          </li>
          <li>
            <a href="/auth/login">Login</a>
          </li>
        {{/if}}
      </ul>
    </nav>
    {{{body}}}
  </body>
</html>